<Window x:Class="NoSqlDatabaseWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NoSQL Database" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="Name" Margin="10"/>
            <TextBox Name="NameTextBox" Width="200" Margin="10"/>
            <TextBlock Text="Description" Margin="10"/>
            <TextBox Name="DescriptionTextBox" Width="200" Margin="10"/>
            <Button Content="Add Document" Width="200" Margin="10" Click="AddDocument_Click"/>
            <Button Content="View Documents" Width="200" Margin="10" Click="ViewDocuments_Click"/>
            <ListBox Name="DocumentsListBox" Width="200" Height="150" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
